//归并排序算法
////
#include <iostream>
#include <stdlib.h>
using namespace std;

//将有序序列 a b 合并成序列 c
void mergesort(int a[], int n, int b[], int m, int c[])
{
	int i,j,k;
	i = j = k = 0;
	while(i < n && j < m)
	{
		if(a[i]<b[j])
		{
			c[k++] = a[i++];
		}else{
			c[k++] = b[j++];
		}
	}
	while(i < n)
	{
		c[k++] = a[i++];
	}
	while(j < m)
	{
		c[k++] = b[j++];
	}
}
int main()
{
	int a[4] = {1,3,4,7};
	int b[6] = {0,2,2,5,6,8};
	int c[10];
	mergesort(a,4,b,6,c);
	for(int i = 0; i< 10; i++)
	{
		cout << c[i] <<",";
	}
	cout << endl;
	cout << "hello" << endl;
	system("pause");
	return 0;
}
